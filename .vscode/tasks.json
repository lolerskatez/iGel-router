{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy to TailSentry Device",
            "type": "shell",
            "command": "scp",
            "args": [
                "-r",
                ".",
                "root@${input:igelHost}:/opt/tailsentry/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Remote Installation",
            "type": "shell",
            "command": "ssh",
            "args": [
                "root@${input:igelHost}",
                "cd /opt/tailsentry && chmod +x *.sh scripts/*.sh configs/tailscale/connect.sh && ./install.sh"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "dependsOn": "Deploy to TailSentry Device"
        },
        {
            "label": "Deploy and Install",
            "type": "shell",
            "command": "echo",
            "args": ["Deploying and installing TailSentry..."],
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Deploy to IGEL Device",
                "Run Remote Installation"
            ]
        },
        {
            "label": "Check TailSentry Status",
            "type": "shell",
            "command": "ssh",
            "args": [
                "root@${input:igelHost}",
                "systemctl status tailscaled casaos cockpit.socket igel-monitor"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "View TailSentry Logs",
            "type": "shell",
            "command": "ssh",
            "args": [
                "root@${input:igelHost}",
                "tail -f /var/log/tailsentry-setup.log"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Backup TailSentry Configuration",
            "type": "shell",
            "command": "ssh",
            "args": [
                "root@${input:igelHost}",
                "/opt/tailsentry/scripts/backup-config.sh backup"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "TailSentry System Health Check",
            "type": "shell",
            "command": "ssh",
            "args": [
                "root@${input:igelHost}",
                "/usr/local/bin/tailsentry-maintenance health"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Update TailSentry System",
            "type": "shell",
            "command": "ssh",
            "args": [
                "root@${input:igelHost}",
                "/usr/local/bin/tailsentry-maintenance update"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "TailSentry Network Setup",
            "type": "shell",
            "command": "ssh",
            "args": [
                "root@${input:igelHost}",
                "/usr/local/bin/tailsentry-network-setup setup"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "igelHost",
            "description": "TailSentry device hostname or IP address",
            "default": "192.168.1.100",
            "type": "promptString"
        }
    ]
}